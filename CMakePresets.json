{
  "version": 2,
  "configurePresets": [
    {
      "name": "sdl_metal_ninja",
      "displayName": "SDL + Metal, Ninja",
      "description": "Sets Ninja generator, build and install directory",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
        "USE_SDL_INSTEADOF_GLFW": "ON",
        "USE_ASSIMP": "OFF",
        "ACTIVE_RENDERER": "Metal"
      }
    },
    {
      "name": "sdl_metal_xcode",
      "displayName": "SDL + Metal, XCode",
      "description": "",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "generator": "Xcode",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "USE_SDL_INSTEADOF_GLFW": "ON",
        "ACTIVE_RENDERER": "Metal"
      },
      "inherits": []
    },
    {
      "name": "sdl_opengl_ninja",
      "displayName": "SDL + OpenGL, Ninja",
      "description": "",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "USE_SDL_INSTEADOF_GLFW": "ON",
        "ACTIVE_RENDERER": "OpenGL"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "examples",
      "description": "Build examples",
      "displayName": "Examples",
      "configurePreset": "sdl_opengl_ninja",
      "targets": [
        "AT2_cube_example"
      ]
    }
  ]
}
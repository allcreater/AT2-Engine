{
    "version": 2,
    "configurePresets": [
        {
            "name": "sdl",
            "displayName": "SDL + Ninja",
            "description": "Sets Ninja generator, build and install directory",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
                "USE_SDL_INSTEADOF_GLFW": "ON"
            }
        },
        {
            "name": "xcode_sdl",
            "displayName": "SDL XCode",
            "description": "",
            "binaryDir": "${sourceDir}/build",
            "generator": "Xcode",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "USE_SDL_INSTEADOF_GLFW": "ON"
            },
            "inherits": []
        }
    ],
    "buildPresets": [
        {
            "name": "examples",
            "description": "Build examples",
            "displayName": "Examples",
            "configurePreset": "sdl",
            "targets": [
                "AT2_cube_example"
            ]
        }
    ]
}